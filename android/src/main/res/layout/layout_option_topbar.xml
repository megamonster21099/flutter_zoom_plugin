<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />

    <FrameLayout
        android:id="@+id/btnSwitchCamera"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_rect"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusRight="@+id/btnLeave"
        android:nextFocusDown="@+id/layout_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:layout_width="@dimen/option_image_size"
            android:layout_height="@dimen/option_image_size"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/icon_switch_camera" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnLeaveZoomMeeting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/selector_rect"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusLeft="@+id/btnSwitchCamera"
        android:nextFocusDown="@+id/layout_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:maxLines="1"
            android:text="@string/btn_leave"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnLeaveZoomMeeting"
        android:layout_toEndOf="@+id/btnSwitchCamera"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meetingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/zm_white"
            android:textSize="20sp"
            tools:text="123456789" />

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/zm_white"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="123456"
            tools:visibility="visible" />
    </LinearLayout>


</RelativeLayout>